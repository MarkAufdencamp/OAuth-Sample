<div class="Service">
	<div class="ServiceHeader">
		<div class="ServiceIcon">
			<%= link_to image_tag("twitter-icon.png"), :controller => 'twitter'  %>
		</div>
		<div class="ServiceTitle">
			<h1>Twitter</h1>
		</div>
		<div class="ServiceLinks">
			<a href="https://dev.twitter.com/" target="_blank" ><h2>Documentation</h2></a>
		</div>
		<div class="ServiceLinks">
			<a href="https://dev.twitter.com/apps" target="_blank" ><h2>API Keys</h2></a>
		</div>
	</div>
	<div class="ServiceBody">
		<div class="ServiceFeature">
			<% if session[:twitterAccessToken] %>
				<div>
					Twitter Access has been Authorized!  Access Token Stored in Session.			
				</div>
				<div class="ServicePanel MenuItem Green">
					<div class="ServicePanel MenuItemIcon">
					<%= link_to image_tag("authorized-256Px-146.png", :class => "ServicePanel MenuItemIcon"), :controller=> 'twitter', :action=> 'index' %>
					</div>
					<div class="ServicePanel MenuItemTitle">
					<%= link_to "Twitter Access Authorized - Return to Service Panel", :controller => 'twitter', :action=> 'index' %>	
					</div>
				</div>						
			<% else %>		
				<div>
					Twitter Access NOT Authorized! No Authorization Code.
				</div>
				<div class="ServicePanel MenuItem Red">	
					<div class="ServicePanel MenuItemIcon">
					<%= link_to image_tag("unauthorized-256Px-145.png", :class => "ServicePanel MenuItemIcon"), :controller=> 'twitter', :action=> 'index' %>
					</div>
					<div class="ServicePanel MenuItemTitle">
					<%= link_to "Twitter Access Denied - Return to Service Panel", :controller => 'twitter', :action=> 'index' %>	
					</div>
				</div>				
			<% end %>			
		</div>
		<div class="TokenInfo">
			Request Token - <%= session[:twitterRequestToken] %><br />
			Request Token Secret - <%= session[:twitterRequestTokenSecret] %><br />
			OAuth Verifier - <%= session[:twitterVerifier] %><br />
			Access Token - <%= session[:twitterAccessToken] %><br />
			Access Token Secret - <%= session[:twitterAccessTokenSecret] %><br />
			Access Token Birth - <%= session[:twitterTokenBirth] %><br />
			Access Token Life - Until User Revocation
		</div>
	</div>
</div>