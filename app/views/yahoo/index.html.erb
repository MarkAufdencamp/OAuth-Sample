<div class="Service">
	<div class="ServiceHeader">
		<div class="ServiceHeaderGroup">
			<div class="ServiceIcon">
				<%= link_to image_tag("yahoo-logo.jpg"), :controller => 'yahoo'  %>
			</div>
			<div class="ServiceTitle">
				<h1>Yahoo</h1>
			</div>
			<div class="ServiceLinks">
				<p><a href="http://developer.yahoo.com/" target="_blank" ><h2>Documentation</h2></a></p>
				<p><a href="https://developer.apps.yahoo.com/projects" target="_blank" ><h2>API Keys</h2></a></p>
			</div>
		</div>
	</div>
	
	<div class="ServiceBody">
		<div class="ServiceBodyGroup">
		<% if session[:yahooAccessToken] %>
			<div class="ServiceFeature">
				<div class="ServicePanel MenuItem Red">	
					<div class="ServicePanel MenuItemIcon">
						<%= link_to image_tag("revokeAuthorization-256Px-034.png", :class => "ServicePanel MenuItemIcon"), :controller=> 'yahoo', :action=> 'revokeAccess' %>
					</div>
					<div class="ServicePanel MenuItemTitle">
						<%= link_to "Revoke Yahoo Access", :controller => 'yahoo', :action=> 'revokeAccess' %>	
					</div>
				</div>
			</div>
			<div class="ServiceFeature">
				<div class="ServicePanel MenuItem Green">
					<div class="ServicePanel MenuItemIcon">
						<%= link_to image_tag("contacts-256Px-012.png", :class => "ServicePanel MenuItemIcon"), :controller=> 'yahoo', :action=> 'retrieveYahooContacts' %>
					</div>
					<div class="ServicePanel MenuItemTitle">
						<%= link_to "Retrieve Yahoo Contacts", :controller => 'yahoo', :action=> 'retrieveYahooContacts' %>	
					</div>
				</div>
			</div>
		<% else %>
			<div class="ServiceFeature">
				<div class="ServicePanel MenuItem Green">	
					<div class="ServicePanel MenuItemIcon">
						<%= link_to image_tag("authorizeAccess-256Px-202.png", :class => "ServicePanel MenuItemIcon"), :controller=> 'yahoo', :action=> 'authorizeAccess' %>
					</div>
					<div class="ServicePanel MenuItemTitle">
						<%= link_to "Authorize Yahoo Access", :controller => 'yahoo', :action=> 'authorizeAccess' %>	
					</div>
				</div>
			</div>
		<% end %>
			<div class="ServiceFeature">
				<div class="ServicePanel MenuItem Green">	
					<div class="ServicePanel MenuItemIcon">
						<%= link_to image_tag("authorizationStatus-256Px-221.png", :class => "ServicePanel MenuItemIcon"), :controller=> 'yahoo', :action=> 'authorizationStatus' %>
					</div>
					<div class="ServicePanel MenuItemTitle">
						<%= link_to "Yahoo Authorization Status", :controller => 'yahoo', :action=> 'authorizationStatus' %>	
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
